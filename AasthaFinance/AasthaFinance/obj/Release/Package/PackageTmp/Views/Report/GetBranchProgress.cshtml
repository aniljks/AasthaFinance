@model AasthaFinance.Models.BranchProgressReport

@{
    ViewBag.Title = "GetBranchProgress";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
</head>
<body>
    <div style="margin-top:15px;"></div>
    <div class="row">
        <div class="col-md-12">
            <h2 style="color:aqua;">Branch Progress Report</h2>
            <br />
            <br />
            <div style="margin-top:15px;"></div>




            <table cellpadding="5" cellspacing="5">
                <tr style="border:5px solid red">
                    <th style="color:blue; border: 1px solid red !important;">
                        <b> Description</b>
                    </th>
                    <th style="color: blue; border: 1px solid red !important;">
                        <b> Count</b>
                    </th>
                </tr>
                <tr style="border:5px solid red">
                    <td style="border: 1px solid red !important;">Total Client :</td>
                    <td style="border: 1px solid red !important;">@Model.TotalClient</td>
                </tr>
                <tr>
                    <td style="border: 1px solid red !important;">Total Active Client :</td>
                    <td style="border: 1px solid red !important;">@Model.TotalActiveClient</td>
                </tr>
                <tr>
                    <td style="border: 1px solid red !important;">Total Number of Disbursed Loan : </td>
                    <td style="border: 1px solid red !important;">@Model.TotalDisbursedLoan</td>
                </tr>

                <tr>
                    <td>Total Number of Loan Disputed :</td>
                    <td>@Model.TotalDisputedLoan</td>
                </tr>

                <tr>
                    <td>Total Loan Amount Disbursed :</td>
                    <td>@Model.TotalLoanAmountDisbursed</td>
                </tr>

                <tr>
                    <td>Total Loan Amount Collection :</td>
                    <td>@Model.TotalCollection</td>
                </tr>
                <tr>
                    <td>Total Loan Amount Due : </td>
                    <td>@Model.TotalDue</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>