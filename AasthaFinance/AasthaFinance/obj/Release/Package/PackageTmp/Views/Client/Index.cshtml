@model PagedList.PagedList<AasthaFinance.Data.Client>

@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Clients</li>
</ol>

<h2 style="font-family:Lucida Calligraphy">Our Clients</h2>
<hr />
<p>
    @Html.ActionLink("Create New Client", "Create", new { }, new { @class = "btn btn-primary" })
</p>

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Our Clients
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTableClient" width="100%" cellspacing="0">
                <tr>
                    <th>
                        Branch Code
                        @*@Html.DisplayNameFor(model => model.Branch.BranchCode)*@
                    </th>
                    <th>
                        Client Code
                        @*@Html.DisplayNameFor(model => model.ClientCode)*@
                    </th>
                    <th>
                        Name
                        @*@Html.DisplayNameFor(model => model.ClientName)*@
                    </th>
                    <th>
                        Father Name
                        @*@Html.DisplayNameFor(model => model.FatherName)*@
                    </th>
                    <th>
                        Address
                        @*@Html.DisplayNameFor(model => model.CurrentAddress)*@
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Post)
                        </th>*@
                    <th>
                        District
                        @* @Html.DisplayNameFor(model => model.District)*@
                    </th>
                    <th>
                        State
                        @*@Html.DisplayNameFor(model => model.State)*@
                    </th>
                    @*<th>
                        PIN
                        @Html.DisplayNameFor(model => model.PinCode)
                    </th>*@

                    <th>
                        Gender
                        @*@Html.DisplayNameFor(model => model.Gender.Gender1)*@
                    </th>
                    <th>
                        DOB
                        @*@Html.DisplayNameFor(model => model.DateOfBirth)*@
                    </th>
                    <th>
                        Contact(P)
                        @*@Html.DisplayNameFor(model => model.PersonalContact)*@
                    </th>
                    @*<th>
                        Contact(O)
                        @Html.DisplayNameFor(model => model.OfficeContact)
                    </th>*@
                    <th>
                        Photo
                        @*@Html.DisplayNameFor(model => model.ClientImage)*@
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.User.UserName)
                        </th>*@

                    @*<th>
                        Notes
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>*@

                    <th>Edit</th>
                    <th>Details</th>
                    <th>Delete</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Branch.BranchCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClientCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FatherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentAddress)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Post)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.District)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.PinCode)
                        </td>*@

                        <td>
                            @Html.DisplayFor(modelItem => item.Gender.Gender1)
                        </td>
                        <td>                            
                            @Html.Label(item.DateOfBirth.GetValueOrDefault().ToShortDateString())
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonalContact)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.OfficeContact)
                        </td>*@
                        <td>
                            <img src="@item.ClientImage" width="100" height="100" />
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.User.UserName)
                            </td>*@
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>*@

                        <td>
                            <a class="nav-link" href="@Url.Action("Edit", "Client", new { id = item.ClientId })">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a class="nav-link" href="@Url.Action("Details", "Client", new { id = item.ClientId })">
                                <i class="fa fa-info-circle"></i>
                            </a>
                        </td>
                        <td>
                            <a class="nav-link" style="color: red;" href="@Url.Action("Delete", "Client", new { id = item.ClientId })">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>                        
                    </tr>
                }

            </table>
            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
            </div>
        </div>
    </div>
</div>