@model AasthaFinance.Data.LoanPreClosing

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">PreClosing of Loan</li>
</ol>

<h2 style="font-family:Lucida Calligraphy">PreClosing of Loan</h2>
<hr />

<div class="container">
    <div class="card card-register mx-4 mt-2">
        <div class="card-header"><h2>PreClosing of Loan</h2></div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>                    

                    <div class="editor-label">
                        @Html.LabelFor(model => model.LoanDisbursementId, "LoanDisbursement")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("LoanDisbursementId", String.Empty)
                        @Html.ValidationMessageFor(model => model.LoanDisbursementId)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.ClosingDate)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ClosingDate)
                        @Html.ValidationMessageFor(model => model.ClosingDate)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.AmountPaid)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.AmountPaid)
                        @Html.ValidationMessageFor(model => model.AmountPaid)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.PreClosingCharges)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PreClosingCharges)
                        @Html.ValidationMessageFor(model => model.PreClosingCharges)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Notes)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Notes)
                        @Html.ValidationMessageFor(model => model.Notes)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.UserId, "User")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("UserId", String.Empty)
                        @Html.ValidationMessageFor(model => model.UserId)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.ActualLoanBalance)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ActualLoanBalance)
                        @Html.ValidationMessageFor(model => model.ActualLoanBalance)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.TotalPaid)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.TotalPaid)
                        @Html.ValidationMessageFor(model => model.TotalPaid)
                    </div>

                </fieldset>
                <fieldset style="margin-top:10px;">
                    <div class="form-group">
                        <div class="form-row">
                            <input type="submit" id="btnSubmit" class="btn btn-primary" style="margin-right:5px;" value="Create" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </fieldset>
            }

        </div>
    </div>
</div>
