@model AasthaFinance.Models.BranchProgressReportModel

@{
    ViewBag.Title = "Branch Progress Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Branch Progress Report</li>
</ol>


<h2 style="font-family:Lucida Calligraphy">Branch Progress Report</h2>
<hr />

<div class="container">
    <div class="card card-register mx-4 mt-2">
        <div class="card-header"><h2>Branch Progress Report</h2></div>
        <div class="card-body">

            @using (Html.BeginForm("Index", "Report", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.BranchId, "Branch")
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("BranchId", null, String.Empty, new { @id = "ddlBranch", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BranchId)
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="editor-label">
                                Start Date
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.StartDate) @*, new { @class = "form-control" })*@                                
                                @Html.ValidationMessageFor(model => model.StartDate)
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="editor-label">
                                End Date
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.EndDate) @*, new { @class = "form-control" })*@
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <input type="submit" class="btn btn-primary" style="margin-right:5px;" value="Generate Report" />
                    </div>
                </div>

            }
        </div>
    </div>
</div>